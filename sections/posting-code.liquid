{% style %}
  .outer-section{
    max-width:100%;
    width:90%;
    margin:0 auto;
    display:flex;
    flex-direction:row;
  }
  .inner-image,.inner-content{
    width:50%;
  }
  .inner-content{
    padding:20px;
    display:flex;
    flex-direction:column;
  }
  .inner-image img{
    width:100%;
    height:auto;
    object-fit:contain;
  }
{% endstyle %}
<div class="container-fluid">
  <div class="outer-section">
    <div class="inner-image">
       {{ section.settings.image_box | img_url: '', scale: 2 | img_tag: section.settings.image_box.alt }}
    </div>
    <div class="inner-content" {% if section.settings.text_style == 'top' %} style="justify-content:start;" {% else if  section.settings.text_style == 'middle' %} style="justify-content:center;"  {% else if  section.settings.text_style == 'end' %} style="justify-content:end;" {% else %} <p>null</p>  {% endif %}>
      {% render 'rating' %}
      <h2>This is My Heading 2</h2>
      <p>This is a sample paragraph. You can add more details here about your content or offer additional information that complements the heading above. This text provides context or elaborates on the content presented.</p>
      <button class="btn btn-primary">Click Me</button>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Posting",
    "settings": [
      {
              "type":"image_picker",
        "id":"image_box",
      "label":"Image",
      "info":"Pick your image"
      },
       {
          "type": "select",
          "id": "text_style",
          "options": [
            {
              "value": "top",
              "label": "top align"
            },
            {
              "value": "middle",
              "label": "Middle Align"
            },
            {
              "value": "end",
              "label": "End Align"
            }
          ],
          "default": "top",
          "label": "top align"
        },

    ],
    "presets": [{
      "name": "Posting"
    }]
  }
{% endschema %}