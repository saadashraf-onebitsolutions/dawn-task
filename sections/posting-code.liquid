{% style %}
  .outer-section {
    max-width: 100%;
    width: 90%;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    gap: 20px; /* Added gap for better spacing */
  }
  .inner-image, .inner-content {
    width: 50%;
  }
  .inner-content {
    padding: 20px;
    display: flex;
    flex-direction: column;
  }
  .inner-image img {
    width: 80%;
    height: auto;
    object-fit: contain;
    border-radius: 8px; /* Rounded corners for the image */
  }
  .inner-content h2 {
    margin-bottom: 10px;
    color: #333; /* Darker text for heading */
  }
  .inner-content p {
    margin-bottom: 20px;
    color: #666; /* Lighter text for paragraph */
  }
  .inner-content button {
    padding: 10px 20px;
    background-color: #007bff; /* Blue background for button */
    color: #fff; /* White text for button */
    border: none;
    border-radius: 4px; /* Rounded corners for button */
    cursor: pointer;
    transition: background-color 0.3s ease; /* Smooth transition */
  }
  .inner-content button:hover {
    background-color: #0056b3; /* Darker blue on hover */
  }
  
  @media (max-width: 700px){
    .outer-section {
    flex-direction: column;

}
    .inner-image, .inner-content {
    width: 90%;
}
  }
{% endstyle %}

<div class="container-fluid" style="background-color:{{ section.settings.bg-color }}">
  <div class="outer-section">
    <div class="inner-image">
      {{ section.settings.image_box | img_url: '', scale: 2 | img_tag: section.settings.image_box.alt }}
    </div>
     <div class="inner-content" style="justify-content:{{ section.settings.text_style }}">
    {% render 'rating' %}
      <h2>This is My Heading 2</h2>
      <p>This is a sample paragraph. You can add more details here about your content or offer additional information that complements the heading above. This text provides context or elaborates on the content presented.</p>
      <div style="width:100%;"><button class="btn btn-primary" style="width: 50%; font-size: large;font-weight: 900;">Click Me</button></div>
       
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Posting",
    "settings": [
      {
        "type": "image_picker",
        "id": "image_box",
        "label": "Image",
        "info": "Pick your image"
      },
      {
        "type": "select",
        "id": "text_style",
        "options": [
          {
            "value": "start",
            "label": "Top align"
          },
          {
            "value": "center",
            "label": "Middle Align"
          },
          {
            "value": "end",
            "label": "End Align"
          }
        ],
        "default": "start",
        "label": "Text Alignment"
      },
       {
        "type": "color",
        "id": "bg-color",
        "label": "Background Color",
        "info": "Pick your Color"
      },
    ],
    "presets": [
      {
        "name": "Posting"
      }
    ]
  }
{% endschema %}
